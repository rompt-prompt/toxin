mixin checkbox(type='short', label, content, id, cls, chk)
    .checkbox(class=`${cls}`)
        input(type="checkbox", name=`${id}`, id=`${id}`, checked= `${chk}` === 'c' ? true : false)
        label.text.checkbox__label.checkbox__custom(for=`${id}`, class= `${type}` === 'rich' ? "checkbox__label_rich" : "")= label
            if type === 'rich'
                p.text.checkbox__content= content