mixin text-field(label, type='text', id, placeholder, cls='', value='') 
    .text-field(class=`${cls}`)
        if label
            label.text-field__title.title-3(for=`${id}`)= label
        input.text-field__input.text(
            name=`${id}`,
            id=`${id}`, 
            placeholder=`${placeholder}`,  
            type=`${type}`,
            value=`${value}`
            )
